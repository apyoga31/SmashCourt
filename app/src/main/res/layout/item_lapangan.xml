<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textOrderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Lapangan"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textOrderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            app:layout_constraintTop_toBottomOf="@id/textOrderName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            app:layout_constraintTop_toBottomOf="@id/textOrderPrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textOrderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe"
            android:textColor="#616161"
            app:layout_constraintTop_toBottomOf="@id/textOrderDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"/>

<!--        <TextView-->
<!--            android:id="@+id/textOrderStatus"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Belum Lunas"-->
<!--            android:textColor="#B00020"-->
<!--            android:textStyle="bold"-->
<!--            app:layout_constraintTop_toTopOf="@id/textOrderDate"-->
<!--            app:layout_constraintEnd_toEndOf="parent" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
